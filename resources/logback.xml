<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Consola para tu código, con colores -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!--
              %highlight aplica color según el nivel:
              - ERROR rojo
              - WARN amarillo
              - INFO verde
              - DEBUG azul
              - TRACE magenta
            -->
            <pattern>[%d{HH:mm:ss}] %highlight(%-5level) %cyan(%logger{30}) - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Fichero solo para logs de Hibernate (sin colores, es fichero) -->
    <appender name="HIBERNATE_FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/hibernate.log</file>
        <append>true</append>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>[%d{HH:mm:ss}] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Hibernate: solo WARN+ al fichero, nada en consola -->
    <logger name="org.hibernate" level="WARN" additivity="false">
        <appender-ref ref="HIBERNATE_FILE"/>
    </logger>

    <!-- Root: tu aplicación. Pon DEBUG si quieres ver también los debug -->
    <root level="DEBUG">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>
